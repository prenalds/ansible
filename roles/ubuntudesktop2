 ---
 
 -name: install packages
  apt:
    name:"{{item}}"
    state: latest
   with_items:
   -rkhunter
   -clamAV
   -clamTK
   
 -ufw:
   state: enabled
   policy: allow
 
 -ufw:
   rule: reject
   port: telnet
   log: yes
   
  -ufw:
    rule: limit
    port: ssh
    proto: tcp
    log: yes
  
  -ufw:
    rule: limit
    port: sshd
    proto:tcp
    log: yes
    
  -user:
   name: all
   generate_ssh_key: yes
   ssh_key_bits: 4096
   ssh_key_file: .ssh/id_rsa
    
  
  -

   
  
